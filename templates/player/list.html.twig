{% extends 'base_dashboard.html.twig' %}

{% block title %}List of Players{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>List of Players</h1>
        <a href="{{ path('player_new') }}" class="btn btn-primary">Add New</a>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h2 class="card-title">Players</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Teams</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for player in players %}
                        <tr>
                            <td>{{ player.firstName }}</td>
                            <td>{{ player.lastName }}</td>
                            <td></td>
                            <td>
                                <a href="{{ path('player_edit', {'id': player.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                <form action="{{ path('player_delete', {'id': player.id}) }}" method="post" style="display: inline;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this player?')">Delete</button>
                                </form>
                                <a href="{{ path('player_show', {'id': player.id}) }}" class="btn btn-sm btn-info">Show</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
