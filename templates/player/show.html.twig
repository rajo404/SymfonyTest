{% extends 'base_dashboard.html.twig' %}

{% block title %}player Details{% endblock %}

{% block body %}
    <div class="player-details-container">
        <div class="row mb-4">
            <div class="col-md-6">
                <h1 class="card-title">{{ player.firstName }} {{ player.lastName }}</h1>
            </div>
            <div class="col-md-6 text-end">
                <a href="{{ path('player_list') }}" class="btn btn-secondary">BACK</a>
            </div>
        </div>

        <h2>TEAMS</h2>
        {% for team in player.id %}
            <p>{{ team.name }} - {{ team.country }}</p>
        {% endfor %}
    </div>
{% endblock %}