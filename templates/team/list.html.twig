{% extends 'base_dashboard.html.twig' %}

{% block title %}List of Teams{% endblock %}

{% block body %}
    <div class="team-list-header">
        <div class="row">
            <div class="col-md-6">
                <h1 class="team-list-title">List of Teams</h1>
            </div>
            <div class="col-md-6">
                <div class="text-end">
                    <a href="{{ path('team_new') }}" class="btn btn-primary">NEW TEAM</a>
                </div>
            </div>
        </div>
    </div>

    <div class="team-list-container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Country</th>
                    <th>Balance</th>
                    <th>Players</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.name }}</td>
                        <td>{{ team.country }}</td>
                        <td>$ {{ team.balance|number_format(2) }}</td>
                        <td>{{ team.players|length }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a href="{{ path('team_list', {'id': team.id}) }}" class="btn btn-sm btn-success"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('team_list', {'id': team.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                                <a href="{{ path('team_list', {'id': team.id}) }}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
